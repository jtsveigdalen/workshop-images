$('.copylink').on("click", function () {
    value = $(this).data('clipboard-text');
    var $temp = $("<input>");
    $("body").append($temp);
    $temp.val(value).select();
    document.execCommand("copy");
    $temp.remove();
});

function copyLink(e) {
    var copyText = document.querySelector(e.dataset.clipboardTarget);
    copyText.select();
    document.execCommand("copy")
};